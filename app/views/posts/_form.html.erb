<%= form_for post do |f| %>
    <h3>
    <%= f.label "Title:" %>
    <%= f.text_field :title %>
    </h3>

    <h3>
    <%= f.label "Content:" %>
    <%= f.text_area :content %>
    </h3>
    
    <h3>
    <%= f.label "Category:" %> </h3>

    <p>
    <%= f.label "Choose existing:" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </p>

    <p> or </p>
    
    <p>
    <%= f.label "Create new:" %>
    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>
    </p>

    <%= f.submit %>
  <% end %>
